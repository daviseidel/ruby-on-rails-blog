<head>
  <link rel="stylesheet" href=" https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"  crossorigin="anonymous">
</head>

<%= render "header"%>

<h1 class="display-1">Criar Artigo</h1>

<%= form_with model: @artigo do |form| %>
    <div>
        <%= form.label :titulo, :class => "form-label"%><br>
        <%= form.text_area :titulo, :class => "form-control" %>
    </div>

    <div>
        <%= form.label :corpo, :class => "form-label"%><br>
        <%= form.text_area :corpo, :class => "form-control" %>
    </div>

    <div>
        <%= form.submit "Enviar", :class => "btn btn-primary" %>
    </div>
<%end%>